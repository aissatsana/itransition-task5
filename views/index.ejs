<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Table</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
  <div class="container">
    <div class="my-4 d-flex align-items-center">
      <div class="col-4 d-flex align-items-center">
        <label for="regionSelect" class="me-2">Region:</label>
        <select id="regionSelect" class="form-select">
          <option value="USA" <% if (region === 'USA') { %>selected<% } %>>USA</option>
          <option value="Russia" <% if (region === 'Russia') { %>selected<% } %>>Russia</option>
          <option value="France" <% if (region === 'France') { %>selected<% } %>>France</option>
        </select>
      </div>

      <label for="slider" class="ms-4 me-2">Errors:</label>
      <input type="range" class="form-range" id="slider" min="1" max="10" value="1">
    
      <label for="field" class="ms-1">
        <span class="visually-hidden">Errors till 1000</span>
      </label>
      <input type="number" class="form-control" id="field" min="0" max="1000">

      <label for="seedInput" class="ms-4 me-2">Seed:</label>
      <input type="text" class="form-control" id="seedInput" placeholder="Enter seed" value="<%= seed %>">
      <button id="generateBtn" class="btn btn-secondary mx-2">
        <span class="visually-hidden">Generate</span>
        <i class="bi bi-shuffle"></i>
      </button>

      <button class="btn btn-secondary ms-4 col-2" id="exportBtn">Export to CSV</button>
    </div>
  <h1>User Table</h1>
  <table class="table" id="userTable">
    <thead>
      <tr>
        <th>ID</th>
        <th>Unique Number</th>
        <th>First Name</th>
        <th>Address</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody class="table-stripped">
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.uniqueNumber %></td>
          <td><%= user.name %></td>
          <td><%= user.address %></td>
          <td><%= user.phoneNumber %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <script src="//cdnjs.cloudflare.com/ajax/libs/seedrandom/3.0.5/seedrandom.min.js">
  </script> 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script type="module" src="table.js"></script>
  <script type="module" src="errors.js"></script>
  <script src="csv.js"></script>
</body>
</html>
